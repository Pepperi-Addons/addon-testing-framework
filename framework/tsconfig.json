{
  "compilerOptions": {
    "target": "es2017", 
    "module": "commonjs",
    "strict": true,
    "rootDir": ".",
    "outDir": "build",
    "esModuleInterop": true,
    "declaration": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "allowJs": true,
    "resolveJsonModule": true,
    "lib": [ "ES2019" ],
    "baseUrl": ".",
    "paths": {
      "mocha": [ "node_modules/mocha/mocha.js" ],
    }
  },
  "exclude": [
    "./build/**",
    "./dist/**"
  ]
}
